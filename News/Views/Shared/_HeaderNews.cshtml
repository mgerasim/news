                            <div class="rd-navbar-register">
                                <form action="#">
                                    <div class="form-group">
                                        <input type="text" name="name" placeholder="Your name" class="form-control">
                                    </div>
                                    <div class="form-group offset-top-12">
                                        <input type="password" name="pass" placeholder="Your password" class="form-control">
                                    </div>
                                    <button type="submit" class="btn btn-warning offset-top-12 text-normal">Register</button>
                                </form>
                            </div>
                        </div>*@
                    </div>
                </div>
                
                <!-- RD Navbar Panel-->
                <div class="rd-navbar-panel">
                    <!-- RD Navbar Toggle-->
                    <button data-rd-navbar-toggle=".rd-navbar-nav-wrap" class="rd-navbar-toggle"><span></span></button>
                    <!-- RD Navbar Brand-->
                    <div class="rd-navbar-brand"><a href="@Url.Action("Index","Home")" class="brand-name"><span>Метео </span>Портал</a></div>
                    
