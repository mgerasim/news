@model News.Models.ArticleNew
@{
    ViewBag.Title = "Добавить новость";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="cell auto-size padding20 bg-white" id="cell-content">
    <h1 class="text-light">Добавить новость <span class="mif-file-text place-right"></span></h1>
    <hr class="thin bg-grayLighter">    

@using (Html.BeginForm("Create", "Article", null,
    FormMethod.Post, new { @class = "form-horizontal" }))
{ 
    
    <div class="grid">
        <div class="row">
            <div class="cell">
                <label class="block">Заголовок:</label>
                <div class="input-control text">
                    @Html.EditorFor(model => model.Title)     
                    @Html.ValidationMessageFor(model => model.Title)               
                </div>
                
            </div>
        </div>

        <div class="row">            
            <div class="offset10">
                <label class="block">Содержимое:</label>

                <script src="~/Scripts/ckeditor.js"></script>

                <div class="input-control textarea">
                    @Html.TextAreaFor(model => model.Content, new  { id="Article_Content"})                    
                    <script>
                        CKEDITOR.replace("Article_Content",
                            {
                                enterMode: CKEDITOR.ENTER_BR
                            });
                    </script>
                </div>
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>

        <div class="row">
            <div class="cell">
                <label class="block">Источник:</label>
                <div class="input-control text">
                    @Html.EditorFor(model => model.Source)
                </div>
                @Html.ValidationMessageFor(model => model.Source)
            </div>
        </div>

        <div class="row">
            <button type="submit" class="button primary">Сохранить</button>
        </div>

        <div class="row">          
            @Html.ActionLink("Назад", "Index")
        </div>

    </div>
    
    
    
    
    
    
    
    
    
    

    
}
        
</div>|




