@model NewsEntity.Models.City
@{
    ViewBag.Title = "Добавить город";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script src="~/Scripts/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        var clipboard = new Clipboard('.btn');
    });
</script>




<div class="cell auto-size padding20 bg-white" id="cell-content">
    <h1 class="text-light">Добавить город <span class="mif-file-text place-right"></span></h1>
    <hr class="thin bg-grayLighter">
        
    @using (Html.BeginForm("Create", "City", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="grid">
            <div class="row">
                <div class="cell">
                    <label class="block">Наименование:</label>
                    <div class="input-control text">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="cell">
                    <label class="block">Адрес погоды в городе сейчас Примпогода:</label>
                    <div class="input-control text">
                        @Html.EditorFor(model => model.Url_Primpogoda_Weather_Now)
                        @Html.ValidationMessageFor(model => model.Url_Primpogoda_Weather_Now)
                    </div>
                </div>

                <div class="cell">
                    <label class="block">Адрес погоды в городе сегодня Примпогода:</label>
                    <div class="input-control text">
                        @Html.EditorFor(model => model.Url_Primpogoda_Weather_Today)
                        @Html.ValidationMessageFor(model => model.Url_Primpogoda_Weather_Today)
                    </div>
                </div>

            </div>
        
            
                            
            <div class="row">
                <button type="submit" class="button primary">Сохранить</button>
            </div>

            <div class="row">
                @Html.ActionLink("Назад", "Index")
            </div>

        </div>


    }


    <table class="dataTable border bordered" data-role="datatable" data-auto-width="false">
        <thead>
            <tr>
                <td class="sortable-column sort-asc" style="width: 100px">ID</td>
                <td class="sortable-column">Наименование</td>
                <td class="sortable-column">Адрес погоды в городе сейчас Примпогода</td>
                <td class="sortable-column">Адрес погоды в городе сегодня Примпогода</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in NewsEntity.Models.City.GetAll())
            {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Url_Primpogoda_Weather_Now
                    </td>
                    <td>
                        @item.Url_Primpogoda_Weather_Today
                    </td>
                </tr>
            }
           
        </tbody>
    </table>

</div>




